-- git提交gitlab jenkins 自动构建发布服务端脚本 单独拉取项目 test.sh
#!/bin/bash
dir=/opt
source /etc/profile
cd $dir
if [ -d $1 ];then
   git pull http://$2:$3@$4
else
   git clone http://$2:$3@$4
fi
cd $1
mvn install
cd target
jar_name=`ls *.jar`
pid=`ps -ef |grep $jar_name |grep -v grep | awk '{print $2}'`
if [ "$pid" != "" ];then
kill -9 $pid
fi
BUILD_ID=dontKillMe
nohup java -jar  $jar_name > /var/log/$1.log &

-- jenkins 自动构建command line 命令
使用poll scm 配置Schedule  使用corn 表达式   * * * * *
build 下 填写 execute Shell  参数对应排列
/opt/test.sh ${JOB_NAME} ronghua 12345678 ${GIT_URL} 

-- git 提交github 利用jenkins 工作空间 自动构建发布项目 github_test.sh
cd /root/.jenkins/workspace/$1
mvn install
cd target
jar_name=`ls *.jar`
pid=`ps -ef |grep $jar_name |grep -v grep | awk '{print $2}'`
if [ "$pid" != "" ];then
kill -9 $pid
fi
BUILD_ID=dontKillMe
nohup java -jar  $jar_name > /var/log/$1.log &
-- jenkins 自动构建command line 命令
使用poll scm 配置Schedule  使用corn 表达式   * * * * *
build 下 填写 execute Shell  参数对应排列
/opt/github_test.sh ${JOB_NAME}

-- jenkins 构建Post Steps （Run regardless of build result）例子
#!/bin/bash
BUILD_ID=DONTKILLME
SHELL_SSH=root@10.10.233.24

scp /root/.jenkins/workspace/qs-inventory-service-uat/shuyue_corelayer/com.shuyue.inventory-server/target/inventory-server.jar $SHELL_SSH:/home/shuyueinventory/inventory-server-bak.jar
ssh $SHELL_SSH 'mv -f /home/shuyueinventory/inventory-server-bak.jar /home/shuyueinventory/inventory-server.jar'
ssh $SHELL_SSH 'sh /home/shuyueinventory/server_start.sh inventory-server.jar'

 
